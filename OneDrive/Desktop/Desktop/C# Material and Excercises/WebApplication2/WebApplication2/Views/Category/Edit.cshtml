@model Category

<form method="post" class="mx-auto" style="max-width: 500px;">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4 shadow-sm rounded">

        <!-- Heading -->
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        @* <div asp-validation-summary="ModelOnly"></div> *@
        <!-- Category Name -->
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span> 
        </div>

        <!-- Display Order (with number up/down) -->
        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" class="form-control"/>
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <!-- Buttons -->
        <div class="mb-3 row p-1">
            <div class="col-6">
                <button type="submit" class="btn btn-dark w-100">
                    <i class="bi bi-check-circle me-1"></i> Update
                </button>
            </div>
            <div class="col-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-light border w-100">
                    <i class="bi bi-arrow-left-circle me-1"></i> BACK TO LIST
                </a>
            </div>
        </div>

    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}